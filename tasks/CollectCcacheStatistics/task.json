    "visibility": [
      "Build",
      "Release"
    ],
    "author": "Metron (Vargha Csongor Csaba)",
    "version": {
      "Major": 1,
      "Minor": 0,
      "Patch": 0
    },
    "instanceNameFormat": "Collect ccache stats from $(ccacheLogFile)",
